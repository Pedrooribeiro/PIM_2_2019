<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/App_Themes/Tema1/StyleSheet1.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="~/App_Themes/Tema1/script.js"></script>
</head>
<body>

    <div class="container body-content">
        @RenderBody()
        

    </div>

    @if (Request.IsAuthenticated)
    {
        <h1>Menu</h1>
        <ul id="accordion" class="accordion">
            <li>
                <div class="link"><i class="fa fa-paint-brush"></i>Motorista<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Motorista", "ConsultaMotorista", "Consulta")</li>
                </ul>
            </li>
            <li class="default open">
                <div class="link"><i class="fa fa-code"></i>Multa<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Multa", "ConsultaMulta", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-mobile"></i>Peças<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Peça", "ConsultaPeca", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Veículo<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Veículo", "ConsultaVeiculo", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Pneu<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Pneu", "ConsultaPneu", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Abastecimento<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Abastecimento", "ConsultaAbastecimento", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Aluguel<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Aluguel", "ConsultaAluguel", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Entrada<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Entrada", "ConsultaEntrada", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Manutenção<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Manutenção", "ConsultaManutencao", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Quilometragem<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Quilometragem", "ConsultaQuilometragem", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Rota<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Rota", "ConsultaRota", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Seguro<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Seguro", "ConsultaSeguro", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Sinistro<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Sinistro", "ConsultaSinistro", "Consulta")</li>
                </ul>
            </li>
            <li>
                <div class="link"><i class="fa fa-globe"></i>Usuário<i class="fa fa-chevron-down"></i></div>
                <ul class="submenu">
                    <li>@Html.ActionLink("Consultar Usuário", "ConsultaUsuario", "Consulta")</li>
                </ul>
            </li>

        </ul>
        <ul id="accordion" class="accordion">
            <li>

                @using (Html.BeginForm("LogOff", "Conta", FormMethod.Post, new { id = "logoffForm" }))
                 {
                    <li class="logout"><a href="javascript:document.getElementById('logoffForm').submit()">Sair</a></li>
                 }
            </li>
        </ul>
    }


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
