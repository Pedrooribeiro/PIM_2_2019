@model IEnumerable<ControleFrota.web.Models.veiculos>

@Styles.Render("~/App_Themes/Tema1/StyleSheet1.css")

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Resultado Consulta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id Veículo</th>
                            <th>Cor</th>
                            <th>Placa</th>
                            <th>Modelo</th>
                            <th>Marca</th>
                            <th>Ano Fabricação</th>
                            <th>Motorização</th>
                            <th>Tipo Combustível</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="3" style="color:red">
                                    Nenhum resultado encontrado
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.id_veiculo</td>
                                    <td>@item.cor</td>
                                    <td>@item.placa</td>
                                    <td>@item.modelo</td>
                                    <td>@item.marca</td>
                                    <td>@item.ano_fabricacao</td>
                                    <td>@item.motorizacao</td>
                                    <td>@item.tipo_combustivel</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                </div>
                <div class="modal-footer">
                    @Html.ActionLink("Fechar", "Index", "Home", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
    </div>
</div>
<script>
    $(function () {
        $('#exampleModal').modal('show');
    });
</script>   