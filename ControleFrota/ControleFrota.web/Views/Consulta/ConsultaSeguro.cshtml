@model IEnumerable<ControleFrota.web.Models.seguros>

@Styles.Render("~/App_Themes/Tema1/StyleSheet1.css")

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Resultado Consulta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>id Seguro</th>
                                <th>Número Apólice</th>
                                <th>Seguradora</th>
                                <th>Segurado</th>
                                <th>Corretor</th>
                                <th>Data Início</th>
                                <th>Data Vencimento</th>
                                <th>Valor Total</th>
                                <th>Número Parcelas</th>
                                <th>Situação</th>
                                <th>Placa Seguro</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="3" style="color:red">
                                        Nenhum resultado encontrado
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.id_seguro</td>
                                        <td>@item.numero_apolice</td>
                                        <td>@item.seguradora</td>
                                        <td>@item.segurado</td>
                                        <td>@item.corretor</td>
                                        <td>@item.data_inicio</td>
                                        <td>@item.data_vencimento</td>
                                        <td>@item.valor_total</td>
                                        <td>@item.numero_parcelas</td>
                                        <td>@item.situacao</td>
                                        <td>@item.placa_seguro</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Html.ActionLink("Fechar", "Index", "Home", null, new { @class = "btn btn-secondary" })</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#exampleModal').modal('show');
    });
</script>   